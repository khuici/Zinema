{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Generate Javadoc",
            "type": "shell",
            "command": "javadoc",
            "args": [
                "-d", "${workspaceFolder}/Desktop/docs",
                "-sourcepath", "${workspaceFolder}/Desktop/src",
                "-subpackages", "main",
                "-classpath", "${workspaceFolder}/Desktop/bin;${workspaceFolder}/Desktop/lib/*",
                "-encoding", "UTF-8",
                "-docencoding", "UTF-8",
                "-charset", "UTF-8",
                "-nohelp",

                // Log warnings as errors when compiling.
                "-Werror"
            ],
            "problemMatcher": []
        }
    ]
}
